---
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import "../styles/global.css";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="description"
      content="The personal website of William Wingate"
    />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/mallard.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <script
      src="https://kit.fontawesome.com/71bca80628.js"
      crossorigin="anonymous"></script>
  </head>
  <body class="flex h-screen flex-col bg-slate-50 text-slate-950">
    <Header />
    <main class="container mx-auto max-w-screen-lg px-4">
      <slot />
    </main>
    <Footer />
  </body>
</html>
