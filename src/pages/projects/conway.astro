---
import Layout from "../../layouts/Layout.astro";
const pageTitle = "Conway's Game of Life";
---

<style>
  @import "@catppuccin/palette/css/catppuccin.css";

  div#board {
    margin-top: 40px;
  }

  canvas {
    display: block;
    margin-left: auto;
    margin-right: auto;
    padding: 5px;
    border: 3px var(--ctp-latte-text) solid;
    border-radius: 5px;
  }
</style>

<Layout title={pageTitle}>
  <h1>{pageTitle}</h1>
  <div id="board">
    <canvas id="canvas" width="500" height="500">Conways' Game of Life</canvas
    >
  </div>
</Layout>

<script src="../../scripts/conway.js"></script>
